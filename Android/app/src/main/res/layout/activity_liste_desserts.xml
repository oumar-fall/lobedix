<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listeEntrees">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hauteurBarreHaut"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/back"
                    android:onClick="retour"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/restaurant_name"
                    android:textSize="@dimen/txtTitrePrincipal" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/france" />
            </FrameLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/paramsvg"/>
            </FrameLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5" />

        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="@dimen/burgerMenu"
                android:layout_height="@dimen/burgerMenu"
                android:layout_margin="@dimen/marginBurgerMenu"
                android:background = "@drawable/menu_icon"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/marginGlobalH"
                android:layout_marginTop="@dimen/marginListePlatsT"
                android:gravity="top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:onClick="removeCreme"
                        android:id="@+id/moinscreme"
                        android:layout_width="@dimen/plusMoins"
                        android:layout_height="@dimen/plusMoins"
                        android:background="@drawable/moins"/>

                    <TextView
                        android:id="@+id/creme"
                        android:layout_width="@dimen/plusMoins"
                        android:layout_height="@dimen/plusMoins"
                        android:background="@drawable/rect"
                        android:gravity="center"
                        android:layout_marginHorizontal="2dp"/>

                    <ImageButton
                        android:onClick="addCreme"
                        android:id="@+id/pluscreme"
                        android:layout_width="@dimen/plusMoins"
                        android:layout_height="@dimen/plusMoins"
                        android:background="@drawable/plus"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/marginBoutonsPlatsH"
                        android:layout_marginVertical="@dimen/marginBoutonsPlatsV"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/rect"
                        android:onClick="infosCreme">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="10dp"
                            android:paddingLeft="10dp"
                            android:text="@string/creme"
                            android:textSize="22dp" />

                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:onClick="removeSalade"
                        android:id="@+id/moinsSalade"
                        android:layout_width="@dimen/plusMoins"
                        android:layout_height="@dimen/plusMoins"
                        android:background="@drawable/moins"/>

                    <TextView
                        android:id="@+id/salade"
                        android:layout_width="@dimen/plusMoins"
                        android:layout_height="@dimen/plusMoins"
                        android:background="@drawable/rect"
                        android:gravity="center"
                        android:layout_marginHorizontal="2dp"/>

                    <ImageButton
                        android:onClick="addSalade"
                        android:id="@+id/plusSalade"
                        android:layout_width="@dimen/plusMoins"
                        android:layout_height="@dimen/plusMoins"
                        android:background="@drawable/plus"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/marginBoutonsPlatsH"
                        android:layout_marginVertical="@dimen/marginBoutonsPlatsV"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/rect"
                        android:onClick="infosSalade">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="10dp"
                            android:paddingLeft="10dp"
                            android:text="@string/salade"
                            android:textSize="22dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:onClick="removeMousse"
                        android:id="@+id/moinsMousse"
                        android:layout_width="@dimen/plusMoins"
                        android:layout_height="@dimen/plusMoins"
                        android:background="@drawable/moins"/>

                    <TextView
                        android:id="@+id/mousse"
                        android:layout_width="@dimen/plusMoins"
                        android:layout_height="@dimen/plusMoins"
                        android:background="@drawable/rect"
                        android:gravity="center"
                        android:layout_marginHorizontal="2dp"/>

                    <ImageButton
                        android:onClick="addMousse"
                        android:id="@+id/plusMousse"
                        android:layout_width="@dimen/plusMoins"
                        android:layout_height="@dimen/plusMoins"
                        android:background="@drawable/plus"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/marginBoutonsPlatsH"
                        android:layout_marginVertical="@dimen/marginBoutonsPlatsV"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/rect"
                        android:onClick="infosMousse">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="10dp"
                            android:paddingLeft="10dp"
                            android:text="@string/mousse"
                            android:textSize="22dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:onClick="removeGlace"
                        android:id="@+id/moinsGlace"
                        android:layout_width="@dimen/plusMoins"
                        android:layout_height="@dimen/plusMoins"
                        android:background="@drawable/moins"/>

                    <TextView
                        android:id="@+id/glace"
                        android:layout_width="@dimen/plusMoins"
                        android:layout_height="@dimen/plusMoins"
                        android:background="@drawable/rect"
                        android:gravity="center"
                        android:layout_marginHorizontal="2dp"/>

                    <ImageButton
                        android:onClick="addGlace"
                        android:id="@+id/plusGlace"
                        android:layout_width="@dimen/plusMoins"
                        android:layout_height="@dimen/plusMoins"
                        android:background="@drawable/plus"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/marginBoutonsPlatsH"
                        android:layout_marginVertical="@dimen/marginBoutonsPlatsV"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/rect"
                        android:onClick="infosGlace">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="10dp"
                            android:paddingLeft="10dp"
                            android:text="@string/glace"
                            android:textSize="22dp" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </FrameLayout>


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/main_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>
